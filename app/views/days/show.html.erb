<h2>  <%= @day.trip_date %> - <%= @day.trip.name %>  </h2>

<hr>
<%= link_to "back to trip page", trip_path(@day.trip_id) %> |
<%= link_to "add new place", "/trips/#{@trip.id}/days/#{@day.id}/add" %> |
<%= link_to "edit day info", edit_trip_day_path(@trip,@day) %>

<h3>  <%=@day.destination %></h3>


<h4>Stay at:</h4>
<% @day.places.each do |p| %>
  <% if p.place_type == 1 %>
    <ul>
      <hr>
      <img class:"place_img" src="<%=p.image%>" alt="">
      <br>
      <%= link_to p.name, place_path(p) %>
      <br>
      <%= p.address %>
    </ul>
  <% end %>
<% end %>


<h4>Visit:</h4>
<% @day.places.each do |p| %>
  <% if p.place_type == 2 %>
    <ul>
      <hr>
      <img class:"place_img" src="<%=p.image%>" alt="">
      <br>
      <%= link_to p.name, place_path(p) %>
      <br>
      <%= p.address %>
    </ul>
  <% end %>
<% end %>
