

<div class="ui middle aligned three column center aligned grid container">
  <div class="column">
    <h2 class="ui teal image header">
      <img src="http://i.imgur.com/QrGF2OL.png" class="image" id="travel-panda">
      <div class="content">
        TravelPanda
      </div>
    </h2>
    <%= form_tag(login_path, class:"ui large form") do %>
      <div class="ui stacked segment">
        <div class="field">
          <div class="ui left icon input">
            <i class="user icon"></i>
            <%= email_field_tag :email, nil, placeholder:"Email address" %>
          </div>
        </div>
        <div class="field">
          <div class="ui left icon input">
            <i class="lock icon"></i>
            <%= password_field_tag :password, nil, placeholder:"Pandaword" %>
          </div>
        </div>

        <div class="">
          <%= submit_tag("Login", class:"ui fluid large teal submit button") %>
        </div>
      </div>
      <div class="ui error message">
        <% if flash[:error].present? %>
          <%= flash[:error] %>
        <% end %>
      </div>
    <% end %>



    <div class="ui message">
      New to us? <%= link_to "Signup", new_user_path %>
    </div>
  </div>
  <div class="column"></div>
  <div class="column"></div>
</div>

<footer>
  logo by freepik.com
</footer>
